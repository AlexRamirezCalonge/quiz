<!DOCTYPE html>
<html>
  <head>
   
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <table>
    <% var i; for (i=0; i < quizes.length; i++) { %>
       <tr>
         <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
         <%if(session.user){
             if(session.user.isAdmin || session.user.id === quizes[i].UserId){%>
           <td><a href="/quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
           <td>
             <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
               <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                 borrar
               </button>
             </form>
           </td>
           
           <% } %>
           <td>
		<% if(quizes[i].isFav){ %>	
			<form method="post" id="borrar" action="/user/<%= session.user.id %>/favourites/<%= quizes[i].id %>?_method=delete">
		    	<input type ="image" src="/media/star_yellow.png" onClick='return confirm(" Â¿Eliminar esta pregunta de favoritos? <% quizes[i].pregunta %>");'>
			</form>
    		<% } else { %>
    			<form method="post" id="borrar" action="/user/<%= session.user.id %>/favourites/<%= quizes[i].id %>?_method=put">
    			<input type ="image" src="/media/star_grey.png" onClick='return confirm(" AÃ±adir esta pregunta a favoritos? <% quizes[i].pregunta %>");'>
			</form>

    		<%}%>
	   </td>
         <% } %>
       </tr>
    <% } %>
    </table>
    <%if(session.user){%>
      <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
    <% } %>
    <form methods="get">
      <input type="text" name="search" value=""/>
      <input type="submit" value="Buscar">
    </form>
  </body>
</html>
